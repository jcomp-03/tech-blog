<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Just Tech News</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <!-- Font Awesome-->
    <script
      src="https://kit.fontawesome.com/331def02d9.js"
      crossorigin="anonymous"
    ></script>
    <!-- Google Fonts-->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Londrina+Solid&
      family=Major+Mono+Display&family=Permanent+Marker&display=swap
      &family=Bungee+Spice&family=Noto+Sans+Display"
      rel="stylesheet"
    />
  </head>

  <body>
    <div class="wrapper">
      <header>
        <h1>
          <a href="/">Takes on Tech in 2</a>
          <i class="fa-solid fa-binoculars"></i>
        </h1>
        <nav class="header-nav">
          {{#if loggedIn}}
          <a href="/user/{{username}}"><i class="fa-solid fa-user"></i></a>
          <a href="" id="logout"><i class="fa-solid fa-right-from-bracket"></i></i></a>
            {{!-- <button id="logout" class="btn-no-style">logout</button> --}}
          {{else}}
            <a href="/login"><i class="fa-solid fa-right-to-bracket"></i></a>
          {{/if}}
        </nav>
      </header>
      <span>Opinions on software and tech, worth reading</span>
      <main>
        {{{body}}}
      </main>
      <footer>
        Thanks for visiting!
      </footer>
    </div>

    <!-- if the user is logged in, load the javascript file -->
    {{#if loggedIn}}
      <script src="/javascript/logout.js"></script>
    {{/if}}
  </body>

</html>